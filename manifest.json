{
  "manifest_version": 3,
  "name": "Imperium Apex",
  "version": "1.0.0",
  "description": "Google Ads数据管理插件",
  "author": "zz",
  
  "permissions": [
    "scripting",
    "storage",
    "tabs",
    "webNavigation"
  ],
  
  "host_permissions": [
    "https://*.google.com/*",
    "http://*.google.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "http://*.google.com/*"
      ],
      "js": [
        "lib/ajaxhook.min.js",
        "src/core/config.js",
        "src/utils/utils.js",
        "src/utils/storage.js",
        "src/services/mock-loader.js",
        "src/utils/data-processor.js",
        "src/handlers/interceptor.js",
        "src/handlers/response-handlers.js",
        "src/handlers/dom-handler.js",
        "src/core/main-logic.js",
        "src/core/content-script.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/*.js",
        "lib/*.js",
        "data/*.json"
      ],
      "matches": [
        "https://*.google.com/*",
        "http://*.google.com/*"
      ]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
